{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "ActivitySmith Docs",
  "colors": {
    "primary": "#000",
    "light": "#fff",
    "dark": "#000"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get started",
            "pages": ["index", "rate-limits"]
          },
          {
            "group": "Features",
            "pages": ["essentials/settings", "essentials/navigation"]
          }
        ]
      },
      {
        "tab": "SDKs",
        "groups": [
          {
            "group": "Overall",
            "pages": ["sdks/overview"]
          },
          {
            "group": "Official",
            "pages": ["sdks/node", "sdks/python", "sdks/cli"]
          }
        ]
      },
      {
        "tab": "Integrations",
        "href": "https://activitysmith.com/integrations"
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Push Notifications Endpoints",
            "pages": ["api-reference/endpoint/push-notification"]
          },
          {
            "group": "Live Activities Endpoints",
            "pages": [
              "api-reference/endpoint/live-activity-start",
              "api-reference/endpoint/live-activity-update",
              "api-reference/endpoint/live-activity-end"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Blog",
          "href": "https://activitysmith.com/blog",
          "icon": "newspaper"
        },
        {
          "anchor": "Changelog",
          "href": "https://activitysmith.com/changelog",
          "icon": "list"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "https://cdn.activitysmith.com/logo/logo-wide.svg",
    "href": "https://activitysmith.com"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:adam@activitysmith.com"
      },
      {
        "label": "Sign up",
        "href": "https://activitysmith.com/app/signup"
      }
    ]
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/ActivitySmithHQ",
      "github": "https://github.com/activitySmithHQ"
    }
  }
}
